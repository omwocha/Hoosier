rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() { return request.auth != null; }
    function userRole(uid) {
      return exists(/databases/$(database)/documents/users/$(uid))
        ? get(/databases/$(database)/documents/users/$(uid)).data.role
        : null;
    }
    function isAdmin() { return signedIn() && userRole(request.auth.uid) == 'admin'; }
    function isViewer() { return signedIn() && userRole(request.auth.uid) == 'viewer'; }
    function isPrayerCoordinator() { return signedIn() && userRole(request.auth.uid) == 'prayerCoordinator'; }

    match /users/{userId} {
      allow create: if signedIn()
        && request.auth.uid == userId
        && (!('role' in request.resource.data) || request.resource.data.role == 'attendee');
      allow read: if isAdmin() || isViewer() || (signedIn() && request.auth.uid == userId);
      allow update: if isAdmin()
        || (signedIn()
            && request.auth.uid == userId
            && (('role' in request.resource.data) == ('role' in resource.data))
            && (!('role' in request.resource.data) || request.resource.data.role == resource.data.role));
    }

    match /events/{eventId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /speakers/{speakerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /announcements/{announcementId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /prayerRequests/{requestId} {
      allow create: if signedIn();
      allow read: if isAdmin() || isPrayerCoordinator() || (signedIn() && request.auth.uid == resource.data.userId);
      allow update: if isAdmin() || isPrayerCoordinator();
    }

    match /feedback/{feedbackId} {
      allow create: if signedIn();
      allow read: if isAdmin() || isViewer();
      allow update, delete: if isAdmin();
    }

    match /accommodations/{type} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /bookingRequests/{requestId} {
      allow create: if signedIn() && request.auth.uid == request.resource.data.userId;
      allow read: if isAdmin() || (signedIn() && request.auth.uid == resource.data.userId);
      allow update: if isAdmin();
    }
  }
}
